<div class="w-screen h-full flex flex-col items-center">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="w-4/5 flex flex-col items-center mt-6">
    

    <div class="w-full flex justify-end items-center">
      <%= link_to "New task", new_task_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    </div>

    <h1 class="font-bold text-4xl">Tasks Due Today</h1>
    <div id="tasks" class="w-full min-h-96 m-2 flex flex-wrap">
      <%= render @tasks_due_today %>
    </div>

    <label class="font-bold text-3xl mt-4">Tasks List</label>
    <div id="tasks" class="w-full m-2 flex flex-wrap">
      <%= render @tasks %>
    </div>
  </div>
</div>
