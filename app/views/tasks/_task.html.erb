<div id="<%= dom_id task %>" class="w-96 p-6 bg-pink-200 border border-gray-200 rounded-lg shadow m-4">
  <p class="my-5">
    <strong class="block font-medium mb-1">Task name:</strong>
    <%= task.task_name %>
  </p>

  <% if action_name == "show" %>
    <p class="my-5">
      <strong class="block font-medium mb-1">Task details:</strong>
      <%= task.task_details %>
    </p>

    <p class="my-5">
      <strong class="block font-medium mb-1">Is finished:</strong>
      <%= task.is_finished %>
    </p>  <p class="my-5">
      <strong class="block font-medium mb-1">Category:</strong>
      <%= task.category.category_name %>
    </p>
  <% end %>
  <p class="my-5">
    <strong class="block font-medium mb-1">Deadline:</strong>
    <%= task.deadline %>
  </p>


  <% if action_name != "show" %>
    <%= link_to "Show this task", task, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this task", edit_task_path(task), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
