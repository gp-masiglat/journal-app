<div class="w-full flex flex-col items-center justify-center mt-8">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg" id="notice"><%= notice %></p>
  <% end %>

<%= form_with(url: sessions_path, method: :post) do |form| %>
  <%= form.label :username %>
  <%= form.text_field :username %>

  <%= form.label :password %>
  <%= form.password_field :password %>

  <%= form.submit 'Login' %>
<% end %>
<%=link_to "Register New Account", signup_path, class:"text-blue-700 underline my-8" %>

</div>