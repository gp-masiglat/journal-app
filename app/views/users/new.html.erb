<%= form_with(model: @user, url: users_path, method: :post, class:"w-1/2 mt-16 py-10 bg-white flex flex-col items-center justify-center") do |form| %>
  <label class="font-bold text-2xl my-2">Sign Up</label>

  <%= form.label :username %>
  <%= form.text_field :username %>

  <%= form.label :password %>
  <%= form.password_field :password %>

  <%= form.label :password_confirmation %>
  <%= form.password_field :password_confirmation %>

  <%= form.submit 'Register' %>
<% end %>
