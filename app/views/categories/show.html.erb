<div class="w-full flex flex-col items-center justify-center">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @category %>

    <div class="flex justify-between ml-2">
    <%= link_to "Edit this category", edit_category_path(@category), class: "rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    <%= button_to "Destroy this category", category_path(@category), method: :delete, class: "rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    <%= link_to "Back to categories", root_path, class: "rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>

</div>
